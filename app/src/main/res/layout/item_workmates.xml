<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_workmates"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        app:layout_constraintWidth_percent="0.20"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:id="@+id/item_workmates_photo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_workmates_tv"
        />

    <TextView
        android:gravity="center_vertical"
        app:layout_constraintWidth_percent="0.80"
        android:id="@+id/item_workmates_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLength="64"
        android:lines="2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_workmates_photo_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>