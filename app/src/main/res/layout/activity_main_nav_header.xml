<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#3D3737"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nav_header_title_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Go4Lunch"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nav_header_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_header_title_tv"
        app:layout_constraintBottom_toTopOf="@id/nav_header_name_and_surname_tv"/>



    <TextView
        android:id="@+id/nav_header_name_and_surname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test TEST"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@id/nav_header_iv"
        app:layout_constraintBottom_toTopOf="@id/nav_header_mail_tv" />

    <TextView
        android:layout_marginBottom="30dp"
        android:id="@+id/nav_header_mail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test.test@gmail.com"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@id/nav_header_iv"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>